{
    "manifest_version": 3,
    "name": "Hover Translate",
    "version": "1.0",
    "description": "Translate hovered words in real-time." ,
    "permissions" : [
        "activateTab" ,
        "storage" ,
        "contextMenus" ,
        "scripting"
    ],
    "background" : {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content.js"]
        }
    ],
    "action":{
        "default_popup": "popup.html"
    }
}